    const avgScore = scores.reduce((sum, score) => sum + score, 0) / scores.length;
    
    let level: 'low' | 'medium' | 'high' | 'critical';
    if (avgScore < 30) level = 'low';
    else if (avgScore < 60) level = 'medium';
    else if (avgScore < 85) level = 'high';
