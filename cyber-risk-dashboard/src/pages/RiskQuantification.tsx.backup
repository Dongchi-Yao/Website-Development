  const MessageContent = ({ message }: { message: Message }) => {
    const formatMessageText = (text: string) => {
      // Handle the formatted text from our enhanced formatResponse method
      const parts: React.ReactNode[] = [];
      let currentIndex = 0;
      
      // Regular expression to match various formatting patterns
      const formatRegex = /<strong[^>]*>(.*?)<\/strong>|<em>(.*?)<\/em>|(\*[^*]*(?:IMMEDIATE|URGENT|CRITICAL)[^*]*\*)|(\nâ€¢ .*?)(?=\n|$)|(\n\d+\. .*?)(?=\n|$)/g;
      
      let match;
      while ((match = formatRegex.exec(text)) !== null) {
        // Add text before the match
        if (match.index > currentIndex) {
          const beforeText = text.slice(currentIndex, match.index);
          if (beforeText.trim()) {
            parts.push(<span key={`text-${match.index}`}>{beforeText}</span>);
          }
        }
        
        if (match[1]) {
          // Bold text (strong)
          parts.push(<strong key={`bold-${match.index}`}>{match[1]}</strong>);
        } else if (match[2]) {
          // Italic text (em)
          parts.push(<em key={`italic-${match.index}`}>{match[2]}</em>);
        } else if (match[3]) {
          // Urgent action markers
          parts.push(
            <Box 
              key={`urgent-${match.index}`}
              component="span" 
              sx={{ 
                color: '#d32f2f', 
                fontWeight: 'bold',
                backgroundColor: 'rgba(211, 47, 47, 0.1)',
                padding: '2px 6px',
                borderRadius: '4px',
