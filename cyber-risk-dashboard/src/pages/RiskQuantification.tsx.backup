              onClick={handleSaveConfirm} 
              variant="contained" 
              disabled={isSaving || !projectName.trim()}
              startIcon={isSaving ? <CircularProgress size={20} /> : <SaveIcon />}
            >
              {isSaving ? 'Saving...' : 'Save Project'}
            </Button>
          </DialogActions>
        </Dialog>
      </motion.div>
    </Container>
  );
};

export default RiskQuantification; 
